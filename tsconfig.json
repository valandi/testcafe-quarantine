{
    "compilerOptions": {
      "resolveJsonModule": true,
      "allowJs": true,
      "target": "esnext",
      "module": "esnext",
      "jsx": "react",
      "sourceMap": true,
      "outDir": "dist",
      "moduleResolution": "node",
      "baseUrl": "./",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports":true,
      "paths": {
        "*": ["types/*"]
      },
      "typeRoots": ["node_modules/@types"]
    },
    "watch": true,
    "include": ["tests/*.ts", "tests/play.*.ts"],
    "exclude": ["node_modules", "dist"]
  }
  
  